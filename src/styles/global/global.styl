* {
  font-family var(--font-regular)
  scroll-behavior smooth
  box-sizing border-box
  scrollbar-width thin
  scrollbar-color var(--main) var(--gray)
  margin: 0

  &::-webkit-scrollbar {
    width 8px
    height 8px
  }

  &::-webkit-scrollbar-track {
    background var(--corporate-100)
  }

  &::-webkit-scrollbar-thumb {
    background-color var(--corporate-10)
    border-radius 3px
    border 1px solid var(--corporate-100)
  }

  &::selection {
    background: var(--corporate-6887-bd, #457CDD);
    color var(--white)
  }
}

figure {
  margin 0
  display inline-flex
  align-items center
  justify-content center
  flex-shrink 0
}

textarea {
  resize vertical
}

html {
  scrollbar-width thin
}

body {
  background var(--body-color)
}

h2 {
  font-family: var(--font-regular)
  font-weight: 500;
  font-size: 1.5rem
  line-height: 34px
  color: #222128;
}

ol,
ul {
  list-style none
  padding 0
  margin 0
}

a {
  text-decoration none
  color var(--dark)
  transition var(--transition)

  &:hover {
    color var(--main)
  }
}

button {
  cursor pointer
}

pre {
  margin 0
  font-family var(--font-regular)
}

b {
  font-weight 700
}

hr {
  height 1px
  padding 0
  margin 0
  border 0
  width 100%
  background var(--gray-dark)
}

.icon svg {
  width 100%
  height 100%
}

.no-overflow {
  overflow hidden
}

.page {
  padding 28px 32px 24px
  display flex
  flex-direction column
  gap 32px
  background var(--neutral-90)
  //min-height: calc(100vh);
  min-height: calc(100vh - 95px);

  &__header {
    display flex
    gap: 10px
    flex-wrap: wrap
    justify-content space-between
    align-items center

    h2 {
      color: var(--neutral-3-f-4144, #3F4144);
      font-size: 2rem;
      font-weight: 600;
      line-height: 104%; /* 33.28px */
      letter-spacing: -0.32px;
    }
  }
}
