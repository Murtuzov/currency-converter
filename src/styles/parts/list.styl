.list {
  padding 30px
  height 100%
  width 100%

  &__container {
    display grid
    gap 2px
  }

  &__item {
    background: var(--white);
    border: 1px solid var(--gray-dark);
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.05);
    border-radius: 10px;
    gap 8px
    padding 10px
    font-weight: 500;
    font-size: 0.875em;
    line-height: 24px;
    color: var(--black);
    display flex
    align-items center
    justify-content flex-start


    .icon {
      width 24px
      height 24px

      svg path {
        fill var(--dark)
      }
    }
  }
}
