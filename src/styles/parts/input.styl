.input {
  display inline-grid
  grid-gap 8px
  width 100%

  &:hover:not(&--error):not(&--focused) {
    & ^[0]__field-label {
      border 1px solid var(--corporate-60)
    }
  }

  &__title {
    color: var(--neutral-30);
    font-size: 1rem
    font-style: normal;
    font-weight: 400;

    ^[0]--error & {
      color var(--red-50)
    }

    > span {
      color: var(--red-50);
    }
  }

  &--disabled {

    & ^[0]__field-label {
      background: var(--gray-4)
      opacity 0.2

    }

    & ^[0]__field input {
      color var(--gray-4)
      cursor not-allowed
    }
  }

  &__subtitle {
    font-weight: 500;
    font-size: 0.8125em;
    line-height: 140%;
    color: var(--dark);
    z-index 1
    flex-shrink 0
  }

  &--column {
    display flex
    flex-direction column
    height: 78px !important
    padding: 16px;
    gap: 32px;
  }

  &__field-label {
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    cursor text
    background: var(--white)
    border 1px solid var(--corporate-90)
    border-radius: 6px;
    transition var(--transition)

    ^[0]--focused & {
      border 2px solid var(--corporate-20)
    }

    ^[0]--error & {
      border 1px solid var(--red-50);
    }

    errorAndFocus = '^[0]--error^[0]--focused &';

    {errorAndFocus} {
      border-radius: 12px
      border 2px solid var(--red-50);
    }

  }

  &__field {
    display: flex;
    background: var(--white);
    height: 48px;
    transition: background 0.2s, box-shadow 0.2s, border-color 0.2s;
    align-items: stretch;
    justify-content: stretch;
    padding: 1px 12px;
    position: relative;
    padding-right: 1px;
    width: 100%;
    overflow: hidden;
    z-index: 2;
    border-radius: 6px;
    border: 1px solid #e7eaf5;

    & input {

      &::placeholder {
        font-weight: 400;
        font-size: 1rem
        line-height: 16px;
        color: var(--neutral-50)
      }

    }

    ^[0]--small & {
      height 32px
    }

    ^[0]--focused & {
      //padding 0 15px
      //padding-right 0
      //background: var(--white);
      //border: 2px solid var(--dark);
      //box-shadow: 0 0 0 1px var(--corporate-20);
      //border-radius 12px
    }
    //errorAndFocus = '^[0]--error^[0]--focused &';
    //
    //{errorAndFocus} {
    //  border-radius: 12px
    //  box-shadow: 0 0 0 1px var(--red-50);
    //}

    //^[0]--error & {
    //  background: var(--white);
    //  border-color var(--red);
    //}

    textarea {
      height auto
      resize vertical
    }

    textarea,
    input {
      appearance none
      border none
      background none
      outline none
      height 100%
      width 100%
      z-index 1
      overflow: hidden;
      color: var(--neutral-3-f-4144, #3F4144);
      text-overflow: ellipsis;
      white-space: nowrap;
      /* body m/regular */
      font-size: 1rem
      font-style: normal;
      font-weight: 400;
      line-height: 120%; /* 16.8px */
    }

    button {
      height 100%
      background none
      border none
      //padding 15px
      padding 0
      display inline-flex
      align-items center
      justify-content center
      z-index: 1;
    }



    svg circle {
      stroke var(--main)
    }
    .loading-indicator svg {
      width: 20px;
      height: 16px;
    }

    .icon svg {
      z-index 10
      width 20px
      height 20px

      path {
        fill var(--main)
      }
    }
  }

  &__errors,
  &__messages {
    font-weight: 400;
    font-size: 0.75rem;
    line-height: 15px;
    color: var(--dark);
    opacity: 0.4;
    display grid
    grid-gap 3px
  }

  &__errors {
    opacity 1
    color var(--red-50)
  }
}
